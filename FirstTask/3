#include <iostream>
#define M 5
#define N 5

using namespace std;

int main(){
    setlocale(LC_CTYPE, "rus");
    int matrix[M][N] ={
        {1, 5, 0, 0, 1},
        {0, 0, 0, 0, 4},
        {3, 0, 1, 2, 0},
        {0, 2, 3, 0, 1},
        {2, 0, 4, 0, 0}
    };
    int I, J;

    cout << "Ведите номер строки и номер столбца" << endl;
    cin >> I >> J;

    for(int j=0; j<N; ++j){
        if(matrix[I-1][j] == 0){
            matrix[I-1][j] = -1;
        }
    }

    for(int i=0; i<M; ++i){
        if(matrix[i][J-1] == 0){
            matrix[i][J-1] = -1;
        }
    }

    for(int i=0; i<M; ++i){
        for(int j=0; j<N; ++j){
            if(j != N-1){
                cout << matrix[i][j] << " ";
            }
            else{
                cout << matrix[i][j] << endl;
            }
        }
    }
    return 0;
}
