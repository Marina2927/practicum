#include <iostream>
#include <cstdlib>
#include <ctime>
#define N 10

using namespace std;

bool is_prime(int x);

bool is_prime(int x){
    bool res = true;
    for (int i=2; i<x/2; i++){
        if (x % i == 0){
            res = false;
            break;
        }
    }
    return res;
}

int main(){
    int* mat = new int(N*N);
    srand(time(NULL));
    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            *(mat+i*N+j) = rand() % 10;
        }
    }

    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << *(mat+i*N+j) << ' ';
        }
        cout << endl;
    }
    cout << endl;

    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            if (!(is_prime(*(mat+i*N+j)))){
                *(mat+i*N+j) = 0;
            }
        }
    }

    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << *(mat+i*N+j) << ' ';
        }
        cout << endl;
    }
}
