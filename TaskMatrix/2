#include <iostream>
#include <cstdlib>
#include <ctime>
#define N 10

using namespace std;

int main(){
    int* mat = new int(N*N);
    srand(time(NULL));
    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            *(mat+i*N+j) = rand() % 10;
        }
    }

    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << *(mat+i*N+j) << ' ';
        }
        cout << endl;
    }

    int sum = 0;
    for (int i=0; i<N; i++){
        sum += *(mat+i*N+i);
    }

    cout << sum;
}
