#include <iostream>
#include <cstdlib>
#include <ctime>
#define N 10

using namespace std;

int main(){
    setlocale(LC_CTYPE, "rus");
    int* mat;
    mat = new int[N*N];
    srand(time(NULL));

    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            *(mat+i*N+j) = rand() % 10;
        }
    }

   for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << *(mat+i*N+j) << ' ';
        }
        cout << endl;
   }

   int max = *(mat+1*N+1);
   int imax;
   for (int i=0; i<N; i++){
        if (*(mat+i*N+i) > max){
            max = *(mat+i*N+i);
            imax = i;
        }
   }

   int n, temp;
   cout << "Введите число от 0 до 9" << endl;
   cin >> n;
   for (int i=0; i<N; i++){
        temp = *(mat+imax*N+i);
        *(mat+imax*N+i) = *(mat+n*N+i);
        *(mat+n*N+i) = temp;
   }

   for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << *(mat+i*N+j) << ' ';
        }
        cout << endl;
   }
}
